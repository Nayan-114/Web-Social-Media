<link rel="stylesheet" href="/css/user_profile.css">
    <h1>Codiel / Profile page </h1>
    

    <% if(user.id == profile_user.id) { %>
        <!-- If user matches then show the form -->
        <form action="/users/update/<%= profile_user.id%>" method="POST">
            <input type="text" name="name" placeholder="Edit your name" value="<%= profile_user.name%>" required>
            <input type="email" name="email" placeholder="Edit your email" value="<%= profile_user.email%>" required>
            <input type="submit" value="update">
        </form>
    <%} else{%>
        <!-- Else show the profile info -->
        <p><%= profile_user.name%></p>
        <p><%= profile_user.email%></p>
    <%}%>